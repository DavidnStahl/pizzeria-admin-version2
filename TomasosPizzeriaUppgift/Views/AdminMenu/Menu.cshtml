@model MenuPage
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/AdminOrders.css" asp-append-version="true" />


<div class="align-content-center bg-white admin-container2">
    <h1>@ViewData["Title"]</h1>
    <div class="text-center text-black"><h2 class="text-black">Lista på maträtter</h2></div>
    <div class="text-left info-margin">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">

                        <a type="button" class="btn btn-success" asp-action="AddNewDish" asp-controller="AdminMenu">Lägg till ny maträtt</a>
                    </th>
                </tr>
                <tr>
                    <th scope="col">
                        <a type="button" class="btn btn-success" asp-action="AddIngrediens" asp-controller="AdminMenu">Lägg till ny Ingrediens</a>
                    </th>
                </tr>
            </thead>
        </table>
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">Maträtt typ</th>
                    <th scope="col">Namn</th>
                    <th scope="col"></th>
                    <th scope="col"></th>


                </tr>
            </thead>
            <tbody>
                @foreach (var matratt in Model.Matratter)
                {
                    <tr>

                        <td>@Model.mattratttyper[matratt.MatrattTyp - 1].Beskrivning</td>
                        <td>@matratt.MatrattNamn</td>
                        <td>
                            <a class="btn btn-primary" type="button" asp-action="EditDish" asp-controller="AdminMenu">Ändra</a>
                        </td>
                        <td>
                            <a class="btn btn-danger" type="button" asp-action="DeleteDish" asp-controller="AdminMenu"  asp-route-id="@matratt.MatrattId">Ta bort</a>
                        </td>


                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>




















